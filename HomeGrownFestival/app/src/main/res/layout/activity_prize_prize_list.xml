<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.matthewhill.prizeinventory.prize_prizeList">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/prizeList_prizeIcon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:contentDescription="TODO"
            android:src="@drawable/shakewin_tent"/>

        <TextView
            android:id="@+id/prizeList_prizeDescription"
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/prizeList_prizeIcon"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Prize Description"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/prizeList_prizeTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/prizeList_prizeDescription"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/prizeList_prizeIcon"
            android:gravity="center_vertical"
            android:text="Example Prize"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
