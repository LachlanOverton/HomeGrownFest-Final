<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.matthewhill.prizeinventory.prize_selectedPrize"
    android:id="@+id/layout_shakewin_detail"
    android:background="@drawable/bg2">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/selectedPrizeImage"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_centerHorizontal="true"
            android:src="@drawable/shakewin_tent"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp">

            <TextView
                android:id="@+id/selectedPrizeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold|italic"
                android:textColor="#ffff9500"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/selectedPrizeShortDescription"
                android:layout_below="@id/selectedPrizeName"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Description"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff9d9d9d"/>

            <TextView
                android:id="@+id/selectedPrizeLongDescription"
                android:layout_below="@id/selectedPrizeShortDescription"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff9d9d9d"/>

            <TextView
                android:id="@+id/selectedPrizeVendor"
                android:layout_below="@id/selectedPrizeLongDescription"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff9d9d9d"/>

            <Button
                android:id="@+id/selectedPrizeClaim"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:background="@drawable/btn_shakewin_claimprize"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/selectedPrizeVendor"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>